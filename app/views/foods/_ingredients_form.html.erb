<div class="js-remove-ingredient-form rounded-xl mb-3">
  <%= f.fields_for 'ingredients[]', Ingredient.new, {} do |i| %>
    <div class="flex flex-col grid grid-cols-9 gap-x-1">
      <div class="col-span-4">
        <%= i.label :ingredient_name,class: "text-gray-600 font-semibold block lg:my-3 text-sm text-center" %>
        <%= i.text_field :ingredient_name, value: ingredient[:ingredient_name], class: "w-full shadow-md bg-white px-2 lg:px-4 py-2 rounded-lg focus:outline-none rounded-md sm:mx-2 focus:outline-none focus:ring focus:ring-orange-400 focus:ring-opacity-80", placeholder: 'オートミール' %>
      </div>
      <div class="col-span-2 md:mx-3">
        <%= i.label :quantity, class: "text-gray-600 font-semibold block lg:my-3 text-sm text-center" %>
        <%= i.text_field :quantity, value: ingredient[:quantity], class: "w-full shadow-md bg-white px-2 lg:px-4 py-2 rounded-lg focus:outline-none rounded-md focus:outline-none focus:ring focus:ring-orange-400 focus:ring-opacity-80", placeholder: '30g' %>
      </div>
      <div class="col-span-2 text-center">
        <%= i.label :proper_quantity, class: "text-gray-600 font-semibold block lg:my-3 text-sm" %>
        <%= i.check_box :proper_quantity, {checked: ingredient[:proper_quantity], class:"w-1/6 h-1/6 lg:w-1/3 lg:h-1/3 lg:mt-1.5 mt-4 checked:bg-red-500"}, true, false  %>
      </div>
      <div class="lg:mt-5">
        <div class='lg:my-3' onclick='removeMediumForm(event)'>
          <div class="text-center cursor-pointer text-red-400 hover:text-red-600 mt-7 lg:mt-8">
            <i class="fas fa-trash-alt text-2xl"></i>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
