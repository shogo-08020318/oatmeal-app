<section class="pt-12 pb-24 bg-blueGray-100 overflow-hidden">
  <h1 class="text-5xl text-orange-500 font-semibold text-center pb-10"><%= @user.name %><span class="text-3xl">さんのプロフィール<span></h1>
  <div class="container mx-auto">
    <div class="grid grid-cols-3 bg-white shadow-xl rounded-2xl">
      <div class="w-full px-4">
        <div class="py-10 mt-10">
          <%= image_pack_tag 'sample.jpg', class: "w-48 h-48 mx-auto shadow-lg rounded-full" %>
          <h2 class="text-3xl font-heading font-medium text-center py-7"><%= @user.name %></h2>
        </div>
      </div>
      <div class="col-span-2 w-full px-4 mb-14 border-l-2 border-orange-400 border-opacity-30 mt-10">
        <div class="py-5 px-8 md:px-16 rounded-3xl">
          <h1 class="text-2xl text-center font-bold pb-3">投稿一覧</h1>
          <div class="mb-14 p-5 overflow-y-auto h-96 bg-yellow-50">
            <div class="">
              <%= render partial: 'user_food', collection: @user.foods %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
