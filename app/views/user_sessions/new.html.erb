<div class="h-screen flex justify-center items-center">
	<div class="lg:w-2/5 md:w-1/2 w-11/12">
		<%= form_with url: login_path, local: true, class: "bg-white p-5 lg:p-10 rounded-lg shadow-lg min-w-full" do |f| %>
			<h1 class="text-center text-2xl mb-6 text-gray-600 font-bold font-sans">ログイン</h1>
      <div>
      	<%= f.label :email, "メールアドレス", class: "text-gray-800 font-semibold block my-3 text-md" %>
			  <%= f.email_field :email, class: "w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none", placeholder: "oatmeal@example.com" %>
      </div>
      <div>
      	<%= f.label :password, "パスワード", class: "text-gray-800 font-semibold block my-3 text-md" %>
			  <%= f.password_field :password, class: "w-full bg-gray-100 px-4 py-2 rounded-lg focus:outline-none", placeholder: "password" %>
      </div>
      <%= f.submit 'ログイン', class: "w-full mt-6 bg-orange-400 rounded-lg px-4 py-2 text-lg text-white tracking-wide font-semibold font-sans" %>
    <% end %>
    <%= link_to "アカウントをお持ちでない方はこちら", "#", class: "flex justify-center items-center mt-6 mb-3 text-sm lg:text-lg text-orange-700 tracking-wide font-semibold font-sans" %>
	</div>
</div>
