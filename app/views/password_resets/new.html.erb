<% content_for(:title, t('.title')) %>

<div class="flex justify-center items-center py-10 mt-20">
  <div class="lg:w-2/5 md:w-2/3 w-11/12">
    <%= form_with url: password_resets_path, class: "bg-gray-50 p-5 lg:p-10 rounded-lg shadow-lg min-w-full" do |f| %>
      <div class="text-center font-semibold text-gray-500 dark:text-gray-200">
        <h1 class="text-3xl"><%= t('.title') %></h1>
        <p class="py-3">登録したメールアドレスを入力してください</p>
      </div>
      <div class="mb-4">
        <%= f.label User.human_attribute_name(:email), class: "block mb-2 text-sm text-gray-600 dark:text-gray-400" %>
        <%= f.email_field :email, placeholder: User.human_attribute_name(:email), class: "w-full bg-white shadow-md px-4 py-1.5 rounded-lg focus:outline-none rounded-md focus:outline-none focus:ring focus:ring-orange-400 focus:ring-opacity-80" %>
      </div>
      <div class="m-6 text-center">
        <%= f.submit t('defaults.submit'), class: "cursor-pointer w-1/2 mb-2 lg:mb-0 bg-orange-400 hover:bg-orange-600 rounded-lg px-4 py-2 text-lg text-white tracking-wide font-semibold" %>
      </div>
    <% end %>
  </div>
</div>
